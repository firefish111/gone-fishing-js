{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "google"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "one-var": ["warn", {
      "const": "consecutive"
    }],
    "max-len": ["warn", {
      "code": 100,
      "tabWidth": 2
    }],
    "arrow-parens": ["error", "as-needed"],
    "guard-for-in": ["off"],
    "padded-blocks": ["warn", "never"]
  }
}
